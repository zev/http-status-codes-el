(defun lookup-http-status-code ()
  "Look up the details of a status code"
  (interactive)
  (let ((code (ido-completing-read "http code : " '("1xx" "100" "101" "2xx" "200" "201" "202" "203" "204" "205" "206"
                                                    "3xx" "300" "301" "302" "303" "304" "305" "306" "307"
                                                    "4xx" "400" "401" "402" "403" "404" "405" "406" "407" "408" "409" "410" "411"
                                                    "412" "413" "414" "415" "416" "417" "499" "5xx" "500" "501" "502" "503" "504" "505")
                                   nil t)))
    (message "%s" (cdr (http-status-code-detail code)))))

